<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>ILCompiler</RootNamespace>
    <AssemblyName>ILCompiler.Build.Tasks</AssemblyName>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>$(RuntimeBinDir)/ilc/netstandard</OutputPath>
    <Configurations>Debug;Release;Checked</Configurations>

    <!-- Workaround for https://github.com/dotnet/corert/issues/6306 -->
    <SkipSigning>true</SkipSigning>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework">
      <Version>15.3.409</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.Build.Utilities.Core">
      <Version>15.3.409</Version>
    </PackageReference>
    <PackageReference Include="System.Reflection.Metadata">
      <Version>1.8.1</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="$(NuGetPackageRoot)\system.reflection.metadata\1.8.1\lib\netstandard2.0\System.Reflection.Metadata.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="$(NuGetPackageRoot)\system.collections.immutable\1.7.1\lib\netstandard2.0\System.Collections.Immutable.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
