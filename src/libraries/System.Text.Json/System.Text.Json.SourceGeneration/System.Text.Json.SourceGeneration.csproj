<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <CLSCompliant>false</CLSCompliant>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="$(MicrosoftCodeAnalysisCSharpWorkspacesVersion)" PrivateAssets="all" />
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="$(MicrosoftCodeAnalysisAnalyzersVersion)" PrivateAssets="all" />
    <PackageReference Include="Microsoft.DotNet.Build.Tasks.Packaging" Version="$(MicrosoftDotNetBuildTasksPackagingVersion)" PrivateAssets="all" />

    <PackageDestination Include="analyzers\dotnet\cs" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="ClassType.cs" />
    <Compile Include="CollectionType.cs" />
    <Compile Include="IsExternalInit.cs" />
    <Compile Include="JsonSourceGenerator.cs" />
    <Compile Include="JsonSourceGenerator.Diagnostics.cs" />
    <Compile Include="JsonSourceGeneratorHelper.cs" />
    <Compile Include="JsonSerializableSyntaxReceiver.cs" />
    <Compile Include="PropertyMetadata.cs" />
    <Compile Include="ReflectionUtils\AssemblyWrapper.cs" />
    <Compile Include="ReflectionUtils\TypeExtensions.cs" />
    <Compile Include="ReflectionUtils\FieldInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\ConstructorInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\CustomAttributeDataWrapper.cs" />
    <Compile Include="ReflectionUtils\MemberInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\MetadataLoadContext.cs" />
    <Compile Include="ReflectionUtils\MethodInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\ParameterInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\PropertyInfoWrapper.cs" />
    <Compile Include="ReflectionUtils\ReflectionExtensions.cs" />
    <Compile Include="ReflectionUtils\RoslynExtensions.cs" />
    <Compile Include="ReflectionUtils\TypeWrapper.cs" />
    <Compile Include="TypeMetadata.cs" />
  </ItemGroup>

  <!-- TODO: remove this helper to launch debugger when shipping. -->
  <PropertyGroup Condition="'$(LaunchDebugger)' == 'true'">
    <DefineConstants>$(DefineConstants);LAUNCH_DEBUGGER_ON_EXECUTE</DefineConstants>
  </PropertyGroup>

</Project>
